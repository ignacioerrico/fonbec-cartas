@page "/"
@using Fonbec.Cartas.Logic.ExtensionMethods
@using Fonbec.Cartas.DataAccess.Entities.Enums

<AuthorizeView>
    <Authorized>
        @{
            var gender = context.User.Gender();
            var salutation = gender switch
            {
                Gender.Male => "Bienvenido",
                Gender.Female => "Bienvenida",
                _ => "Hola"
                };
        }

        <PageHeader Title="@($"{salutation}, {context.User.NickName()}")" />
        
    </Authorized>
</AuthorizeView>
