@page "/"

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h2">Hello, world!</MudText>

<MudText Typo="Typo.body1">Welcome to your new app.</MudText>

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        <MudTable Items="context.User.Claims" Hover="true">
            <HeaderContent>
                <MudTh>Type</MudTh>
                <MudTh>Value</MudTh>
            </HeaderContent>
            <RowTemplate Context="claim">
                <MudTd DataLabel="Type">@claim.Type</MudTd>
                <MudTd DataLabel="Value">@claim.Value</MudTd>
            </RowTemplate>
        </MudTable>
    </Authorized>
</AuthorizeView>