@using Fonbec.Cartas.Logic.ViewModels.Coordinador

<MudDialog>
    <DialogContent>
        <MudAutocomplete T="PadrinoViewModel" Label="Padrino" @bind-Value="_selectedPadrino" SearchFunc="SearchPadrino"
                         Required="true" Variant="Variant.Filled" AnchorOrigin="Origin.BottomCenter">
        </MudAutocomplete>
        
        <MudDatePicker Label="Desde" @bind-Date="_desde" OpenTo="OpenTo.Month" Culture="EsArCultureInfo" />
        
        <MudDatePicker Label="Hasta" @bind-Date="_hasta" OpenTo="OpenTo.Month" Culture="EsArCultureInfo" Disabled="@(!_knownEndDate)" />
        
        <MudCheckBox @bind-Checked="@_knownEndDate" Label="Sé hasta cuándo va a apadrinar" Color="Color.Primary"></MudCheckBox>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">
            Cancelar
        </MudButton>
        <MudButton OnClick="Add" Disabled="@(_selectedPadrino is null)"
                   Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Check">
            Asignar
        </MudButton>
    </DialogActions>
</MudDialog>