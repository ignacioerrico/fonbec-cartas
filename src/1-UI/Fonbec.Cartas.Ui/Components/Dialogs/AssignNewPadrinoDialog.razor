@using Fonbec.Cartas.Logic.Models

<MudDialog>
    <DialogContent>
        <MudAutocomplete T="SelectableModel<int>" Label="Padrino" @bind-Value="_viewModel.SelectedPadrino" SearchFunc="SearchPadrino"
                         Required="true" Variant="Variant.Filled" AnchorOrigin="Origin.BottomCenter">
        </MudAutocomplete>
        
        <MudDatePicker Label="Desde" @bind-Date="_viewModel.Desde" Culture="EsArCultureInfo"
                       PickerVariant="PickerVariant.Inline" />
        
        <MudDatePicker Label="Hasta" @bind-Date="_viewModel.Hasta" Culture="EsArCultureInfo"
                       Disabled="!_viewModel.KnownEndDate"
                       IsDateDisabledFunc="IsToDateDisabled"
                       PickerVariant="PickerVariant.Inline" />
        
        <MudCheckBox T="bool" CheckedChanged="OnKnownEndDateChanged" Checked="_viewModel.KnownEndDate" Label="Sé hasta cuándo va a apadrinar" Color="Color.Primary"></MudCheckBox>
        
        <div style="width:400px; height:250px"></div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">
            Cancelar
        </MudButton>
        <MudButton OnClick="Add" Disabled="_viewModel.SelectedPadrino is null"
                   Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Check">
            Asignar
        </MudButton>
    </DialogActions>
</MudDialog>