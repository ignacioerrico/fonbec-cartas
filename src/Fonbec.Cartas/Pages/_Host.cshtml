@page "/"
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@using Microsoft.AspNetCore.Components.Web
@namespace Fonbec.Cartas.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <base href="~/" />

    <!-- MudBlazor: font and style references -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
    <link rel="stylesheet" href="/_content/MudBlazor/MudBlazor.min.css" />
    
    <link rel="stylesheet" href="/_content/Fonbec.Cartas.Ui/css/site.css" />
    <link rel="stylesheet" href="/Fonbec.Cartas.styles.css" />
    <link rel="icon" type="image/png" href="/_content/Fonbec.Cartas.Ui/favicon.ico" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @{
        var initialState = new Ui.InitialState
        {
            XsrfToken = Antiforgery.GetAndStoreTokens(HttpContext).RequestToken
        };
    }

    <component type="typeof(Ui.App)" render-mode="ServerPrerendered" param-InitialState="@initialState" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <!-- MudBlazor script -->
    <script src="/_content/MudBlazor/MudBlazor.min.js"></script>
</body>
</html>
